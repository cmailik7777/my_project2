<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myauto.designer.Info"
    tools:showIn="@layout/activity_info">

    <ImageView
        android:src="@drawable/myauto"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/imageView13" />

    <TextView
        android:id="@+id/textView55"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView13"
        android:padding="8dp"
        android:text="my Auto версия 1.23"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="20dp"
        android:text="Приложение является целевым инструментом для клиентов нашего сервиса. При обслуживании на нашем сервисе вам придёт SMS с пин кодом. Далее вы сможете войти под своим номером телефоном и пин кодом. А также вы сможете пригласить друзей в приложение Личный кабинет - Пригласить друзей"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView55" />

    <TextView
        android:textColor="@color/black"
        android:textAlignment="center"
        android:padding="8dp"
        android:text="Разработанно командой MegaSoft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:padding="8dp"
        android:src="@drawable/megasoft"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/imageView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>
