<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/komp"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/white">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Tovar_Head"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="Выполнена рабочая операция"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Tovar_Head"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:padding="8dp"
                android:id="@+id/idPos"/>

            <TextView
                android:id="@+id/Tovar_Name"
                android:text="ВсВсесезоне шины"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp" />



        </LinearLayout>

        <TextView
            android:id="@+id/Tovar_Summa"
            android:text="3 000 000 тг"
            android:padding="8dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Tovar_Head"
            android:layout_toEndOf="@+id/linearLayout2" />

        <TextView
            android:id="@+id/Tovar_Cols"
            android:text="11 л."
            android:padding="8dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Tovar_Summa"
            android:layout_alignStart="@+id/Tovar_Summa"
            android:layout_alignEnd="@+id/Tovar_Summa" />







    </RelativeLayout>







</RelativeLayout>

