<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:focusable="true" android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myauto.designer.detail_sozdat_rab_oper"
    tools:showIn="@layout/activity_detail_sozdat_rab_oper">

    <RelativeLayout
        android:background="@color/white"
        android:focusable="true" android:focusableInTouchMode="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Создание рабочей операции"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:padding="8dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView85" />

        <TextView
            android:text="Выберите бригаду"
            android:padding="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView85"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView89" />

        <Spinner
            android:id="@+id/detail_sozdat_rab_brigada"
            android:background="@color/gre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView89"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:text="Наименование работы"
            android:padding="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView90"
            android:layout_below="@+id/detail_sozdat_rab_brigada"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <EditText
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/detail_sozdat_rab_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView90"
            android:imeOptions="actionDone"
            android:ems="10"
            android:inputType="textMultiLine" />


        <TextView
            android:text="Вид действия"
            android:padding="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView91"
            android:layout_below="@+id/detail_sozdat_rab_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:id="@+id/detail_sozdat_rab_vid1"
            android:background="@color/gre"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView91"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/detail_sozdat_rab_vid2"
            android:background="@color/gre"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView91"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <TextView
            android:text="Конструкционная группа"
            android:padding="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView92"
            android:layout_below="@+id/detail_sozdat_rab_vid1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:id="@+id/detail_sozdat_rab_group"
            android:background="@color/gre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView92"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:text="Категория ремонта"
            android:padding="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView93"
            android:layout_below="@+id/detail_sozdat_rab_group"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:id="@+id/detail_sozdat_rab_category"
            android:background="@color/gre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView93"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <CheckBox
            android:id="@+id/checkboxFix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/detail_sozdat_rab_category"
            android:text="Фиксированная цена" />




        <android.support.design.widget.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout16"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_below="@+id/checkboxFix"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <EditText
                android:id="@+id/detail_sozdat_rab_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Стоимость*"
                android:inputType="number" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:id="@+id/textInputLayout17"
            android:layout_below="@+id/checkboxFix"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:id="@+id/detail_sozdat_rab_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Норма времени"
                android:inputType="number" />


        </android.support.design.widget.TextInputLayout>



        <Button
            android:text="Добавить рабочую операцию на рз"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_sozdat_rab_btn_sozdat"
            android:layout_below="@+id/textInputLayout16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>




</ScrollView>
