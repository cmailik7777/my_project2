<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="4dp"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/rab_oper_count"
            android:text="99"
            android:padding="4dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="Бригада:"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView44"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/rab_oper_count"
            android:layout_toEndOf="@+id/rab_oper_count" />

        <TextView
            android:text="A0878"
            android:textColor="@color/black"
            android:padding="4dp"
            android:id="@+id/rab_oper_brigada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView44"
            android:layout_toEndOf="@+id/textView44" />

        <TextView
            android:text="Ответственный:"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView45"
            android:layout_below="@+id/textView44"
            android:layout_alignLeft="@+id/textView44"
            android:layout_alignStart="@+id/textView44" />

