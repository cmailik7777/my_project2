            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView45"
            android:layout_alignBottom="@+id/textView45"
            android:layout_toRightOf="@+id/textView45"
            android:layout_toEndOf="@+id/textView45" />


        <TextView
            android:text="Категория ремонта:"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView46"
            android:layout_below="@+id/textView45"
            android:layout_alignLeft="@+id/textView45"
            android:layout_alignStart="@+id/textView45" />

        <TextView
            android:text="Малярные работы"
            android:textColor="@color/black"
            android:padding="4dp"
            android:id="@+id/rab_oper_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView46"
            android:layout_alignBottom="@+id/textView46"
            android:layout_toRightOf="@+id/textView46"
            android:layout_toEndOf="@+id/textView46" />


        <TextView
            android:text="Стоимость:"
            android:padding="4dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/greenListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/textView47"
            android:layout_below="@+id/textView46"
            android:layout_alignLeft="@+id/textView46"
            android:layout_alignStart="@+id/textView46" />

        <TextView
            android:text="687 000"
            android:textColor="@color/black"
            android:padding="4dp"
            android:id="@+id/rab_oper_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView47"
            android:layout_alignBottom="@+id/textView47"
            android:layout_toRightOf="@+id/textView47"
            android:layout_toEndOf="@+id/textView47" />


        <TextView
            android:text="Рабочая операция:"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView83"
