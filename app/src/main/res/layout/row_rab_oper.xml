            android:layout_below="@+id/textView47"
            android:layout_alignLeft="@+id/textView47"
            android:layout_alignStart="@+id/textView47" />

        <TextView
            android:text="Было сделано то и тому и так и вот так и по всякому было сделана работа"
            android:textColor="@color/black"
            android:padding="4dp"
            android:id="@+id/rab_oper_oper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView83"
            android:layout_alignStart="@+id/textView83"
            android:layout_below="@+id/textView83" />

        <TextView
            android:id="@+id/rab_oper_date"
            android:text="18.09.2019 00.00.00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>





</RelativeLayout>