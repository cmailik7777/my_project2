<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/gre"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/myAd_Brend"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/myAd_Article"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/myAd_text"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/myAd_pic1"
                android:src="@drawable/no_photo"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/myAd_pic2"
                android:src="@drawable/no_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/myAd_pic3"
                android:src="@drawable/no_photo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/myAd_Statys"
                android:text="В ожидании"
                android:padding="8dp"
                android:textStyle="italic"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myAd_pic3"
                android:layout_alignParentEnd="true" />
            <TextView
                android:id="@+id/myAd_City"
                android:text="Almaty"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myAd_pic1"
                android:layout_alignParentStart="true" />

            <TextView
                android:text="Заголовок"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myAd_City"
                android:layout_alignParentStart="true"
                android:id="@+id/textView18" />

            <TextView
                android:id="@+id/myAd_Head"
                android:text="В ожиданииожиданииожиданииожиданииожидании"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView18"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:text="Цена"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/myAd_Head"
                android:layout_alignParentStart="true"
                android:id="@+id/textView66" />

            <TextView
                android:id="@+id/myAd_Cost"
                android:text="11111"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView68"
                android:layout_alignBottom="@+id/textView68"
                android:layout_toEndOf="@+id/textView66" />


            <TextView
                android:text="Дата"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView68"
                android:layout_below="@+id/myAd_Head"
                android:layout_toEndOf="@+id/myAd_Cost" />


            <TextView
                android:id="@+id/myAd_Data"
                android:text="21,12,2012"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView68"
                android:layout_alignBottom="@+id/textView68"
                android:layout_toEndOf="@+id/textView68" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>