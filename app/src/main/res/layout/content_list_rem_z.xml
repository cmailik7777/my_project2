<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myauto.designer.ListRemZ"
    tools:showIn="@layout/activity_list_rem_z">

    <RelativeLayout
        android:id="@+id/ListRemZLayout"

        android:padding="8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="800dp">

        <ImageView
            android:id="@+id/Search_remz_logo"
            android:src="@drawable/no_photo"
            android:layout_width="160dp"
            android:layout_height="68dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp" />

        <ImageView
            android:src="@drawable/head"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:id="@+id/imageView10"
            android:layout_below="@+id/textInputLayout13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/Search_remz_logo"
            android:id="@+id/textInputLayout14">

            <EditText
                android:id="@+id/ListRemZS"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:clickable="false"
                android:cursorVisible="false"
                android:ems="10"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="Период с" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Search_remz_logo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textInputLayout15">

            <EditText
                android:id="@+id/ListRemZDo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:layout_marginRight="30dp"
                android:hint="Период до"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_below="@+id/Search_remz_logo"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </android.support.design.widget.TextInputLayout>






        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/checkBoxOpen"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textInputLayout8">

            <EditText
                android:id="@+id/ListRemZNomerD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Номер документа"

                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textInputLayout9">

            <EditText
                android:id="@+id/ListRemZVin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Vin code"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />



        </android.support.design.widget.TextInputLayout>



        <CheckBox
            android:id="@+id/checkBoxOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Открытый"
            android:layout_below="@+id/spinnerListRemZKlient" />

        <CheckBox
            android:id="@+id/checkBoxClosed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Закрытый"
            android:layout_below="@+id/spinnerListRemZKlient"
            android:layout_centerHorizontal="true" />

        <CheckBox
            android:id="@+id/checkBoxDolg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Долговой"
            android:layout_below="@+id/spinnerListRemZKlient"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:id="@+id/spinnerListRemZManager"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gre"
            android:prompt="@string/app_name"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textInputLayout10"
            android:layout_toLeftOf="@+id/floatingActionButton3"
            android:layout_toStartOf="@+id/floatingActionButton3">

            <EditText
                android:id="@+id/ListRemZGos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Гос. номер"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textInputLayout11">

            <EditText
                android:id="@+id/ListRemZKlient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Клиент"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout11"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textInputLayout12">

            <EditText
                android:id="@+id/ListRemZTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Контактный телефон"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </android.support.design.widget.TextInputLayout>







        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textInputLayout12"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textInputLayout13">

            <EditText
                android:id="@+id/ListRemZComent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Комментарий"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </android.support.design.widget.TextInputLayout>







        <Button
            android:id="@+id/searchbutton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Search"
            android:text="Поиск"
            android:layout_alignBottom="@+id/imageView10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/spinnerListRemZKlient"
            android:layout_width="match_parent"
            android:spinnerMode="dialog"
            android:layout_height="40dp"
            android:background="@color/gre"
            android:layout_below="@+id/textView17"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button8"
            android:padding="8dp"
            android:text="Выбор менеджера"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spinnerListRemZManager"
            android:padding="8dp"
            android:text="Выбор корпоративного клиента"
            android:textAlignment="center"
            android:textColor="@color/black" />


        <Button
            android:id="@+id/button8"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Очистить"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="10sp"
            android:onClick="clear1"
            android:layout_below="@+id/textInputLayout14"
            android:layout_alignRight="@+id/textInputLayout14"
            android:layout_alignEnd="@+id/textInputLayout14"
            android:layout_alignLeft="@+id/textInputLayout14"
            android:layout_alignStart="@+id/textInputLayout14" />

        <Button
            android:id="@+id/button9"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Очистить"
            android:textColor="@android:color/holo_red_dark"
            android:onClick="clear2"
            android:textSize="10sp"
            android:layout_below="@+id/textInputLayout15"
            android:layout_alignLeft="@+id/textInputLayout15"
            android:layout_alignStart="@+id/textInputLayout15" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/camera_white"
            android:onClick="camRemZ"
            android:id="@+id/floatingActionButton3"
            android:layout_below="@+id/textInputLayout9"
            android:layout_alignRight="@+id/textInputLayout11"
            android:layout_alignEnd="@+id/textInputLayout11" />


    </RelativeLayout>





</ScrollView>
