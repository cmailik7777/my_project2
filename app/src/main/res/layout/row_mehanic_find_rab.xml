<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:padding="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/mehanic_find_rab_name"
        android:text="КОЛОДКИ ТАКИЕ НУЖНЫЕ ВОТ ВАЩЕ КУДА БЫ ДЕТЬСЯ"
        android:textColor="@color/black"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mehanic_find_rab_name1"
        android:text="Мин. сумма:"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mehanic_find_rab_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mehanic_find_rab_min"
        android:text="60 000"
        android:padding="4dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mehanic_find_rab_name1"
        android:layout_alignBottom="@+id/mehanic_find_rab_name1"
        android:layout_toRightOf="@+id/mehanic_find_rab_name1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/mehanic_find_rab_name2"
        android:text="Макс. сумма:"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mehanic_find_rab_name1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/mehanic_find_rab_max"
        android:text="80 000"
        android:textColor="@color/black"
        android:padding="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/mehanic_find_rab_name2"
        android:layout_alignBottom="@+id/mehanic_find_rab_name2"
        android:layout_toRightOf="@+id/mehanic_find_rab_name2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    
    

</RelativeLayout>