<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myauto.designer.designer.com.myauto.designer2.Lables"
    tools:showIn="@layout/activity_lables">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/imageView5" />

    <RelativeLayout
        android:id="@+id/relativeLayout7"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        android:background="@color/white">


        <TextView
            android:id="@+id/textView37"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="Заполните заявку"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Описание"
            android:textColor="@android:color/black"
            android:layout_marginStart="43dp"
            android:layout_below="@+id/spinMarka"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp" />

        <Button
            android:id="@+id/button11"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:onClick="OtpravitLabel"
            android:text="Отправить" />

        <Spinner
            android:id="@+id/spinMarka"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView20"
            android:layout_alignStart="@+id/textView10"
            android:layout_below="@+id/textView10"
            android:layout_marginTop="19dp"
            android:spinnerMode="dialog" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/GosLabel"
            android:layout_below="@+id/GosLabel"
            android:layout_marginTop="14dp"
            android:text="Марка машины"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/GosLabel"
            android:layout_below="@+id/textView37"
            android:layout_marginTop="24dp"
            android:text="Гос. номер"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/GosLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView15"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="Введите гос. номер"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*обязательное поля ввода"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="8sp"
            android:layout_alignBottom="@+id/textView15"
            android:layout_alignEnd="@+id/GosLabel" />

        <TextView
            android:id="@+id/textView35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView14"
            android:layout_alignEnd="@+id/GosLabel"
            android:layout_toEndOf="@+id/textView14"
            android:text="*необязательное поля ввода"
            android:textAlignment="textEnd"
            android:textSize="8sp" />

        <TextView
            android:id="@+id/textView36"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:layout_alignEnd="@+id/spinMarka"
            android:layout_toEndOf="@+id/textView10"
            android:text="*обязательное поля ввода"
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="8sp" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="70dp"
        android:layout_height="63dp"
        android:src="@drawable/ic_arrow_back_black_24dp"
        android:backgroundTint="@color/proz"
        android:onClick="backLables"
        app:borderWidth="0dp"
        app:elevation="0dp"
        app:fabSize="normal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/floatingActionButton" />

    <EditText
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginBottom="50dp"
        android:ems="10"
        android:hint="Введите сообщение"
        android:inputType="text|textAutoCorrect|textAutoComplete|textMultiLine|textImeMultiLine"
        android:layout_alignBottom="@+id/relativeLayout7"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
