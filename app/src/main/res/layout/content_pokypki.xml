<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey"
    android:padding="10dp"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myauto.designer.designer.com.myauto.designer2.pokypki"
    tools:showIn="@layout/app_bar_pokypki">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:onClick="silkworm"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bodysilkworm"
            android:id="@+id/imageView6" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"

            android:layout_height="20dp"
            android:scaleType="fitStart"
            android:src="@drawable/af8"
            android:layout_below="@+id/imageView6"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Швейный цех"
            android:padding="8dp"
            android:layout_below="@+id/imageView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нажмите чтобы узнать подробнее..."
            android:padding="8dp"
            android:textSize="10dp"
            android:textColor="@android:color/darker_gray"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:onClick="mmprit"
        android:background="@color/white"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bodymmprint"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView7" />

        <ImageView
            android:layout_width="90dp"

            android:layout_height="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/af7"
            android:layout_above="@+id/textView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Типография"
            android:padding="8dp"
            android:layout_below="@+id/imageView7"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нажмите чтобы узнать подробнее..."
            android:padding="8dp"
            android:textSize="10dp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:onClick="truck"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bodytruck"
            android:id="@+id/imageVi1111ew6"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/imageVie1111"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:scaleType="fitStart"
            android:src="@drawable/af11"
            android:layout_above="@+id/textVie545w4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/dd1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Грузоперевозки"
            android:padding="8dp"
            android:layout_below="@+id/imageVi1111ew6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Нажмите чтобы узнать подробнее..."
            android:padding="8dp"
            android:textSize="10dp"
            android:textColor="@android:color/darker_gray"
            android:id="@+id/textVie545w4"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>



</RelativeLayout>
