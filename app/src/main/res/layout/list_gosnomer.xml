<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="6dp"
    android:layout_height="match_parent">

    <RelativeLayout
        android:padding="2dp"
        android:background="@color/gre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout4">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/white"
            android:id="@+id/relativeLayout">

            <TextView
                android:text="Следующая замена моторного масла"
                android:layout_width="wrap_content"
                android:textAlignment="center"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView33"
                android:visibility="invisible"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/Gos_Oil_Logo" />

            <ImageView
                android:id="@+id/Gos_Oil_Logo"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/Gos_Oil_Type"
                android:text=""
                android:padding="2dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Gos_Oil_Logo"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/Gos_Oil_Logo" />

            <TextView
                android:id="@+id/Gos_Oil_Date"
                android:text=""
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Gos_Oil_Type"
                android:layout_alignEnd="@+id/Gos_Oil_Type"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/Gos_Oil_Km"
                android:text=""
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Gos_Oil_Date"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/Gos_Oil_Date" />


            <TextView
                android:id="@+id/Gos_Oil_Next_Date"
                android:text=""
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/Gos_Oil_Date"
                android:layout_alignBottom="@+id/Gos_Oil_Date"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/Gos_Oil_Type" />

            <TextView
                android:id="@+id/Gos_Oil_Next_Km"
                android:text=""
                android:padding="2dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Gos_Oil_Next_Date"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/Gos_Oil_Date" />



        </RelativeLayout>

    </RelativeLayout>


    <ProgressBar
        android:id="@+id/gn_Progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>


    <ListView
        android:id="@+id/listGN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout4" />

</RelativeLayout>