<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myauto.designer.MyServiceActivity"
    tools:showIn="@layout/app_bar_my_service">

    <TextView
        android:id="@+id/text_Service"
        android:text="Выберите организацию"
        android:textColor="@color/black"
        android:padding="8dp"
        android:textSize="16sp"
        android:visibility="invisible"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Loading_Service"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="53dp"
        android:layout_alignParentEnd="true" />

    <ListView
        android:id="@+id/listview_org_service"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/Loading_Service"
        android:layout_alignParentStart="true">
    </ListView>

    <ListView
        android:id="@+id/list_Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ProgressBar
        android:id="@+id/Loading_Service"
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
