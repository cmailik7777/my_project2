<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myauto.designer.newNews"
    tools:showIn="@layout/activity_new_news">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/no_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/new_news_ico"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/new_news_add_ico"
            android:text="Добавить икнонку"
            android:textColor="#000000"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:layout_below="@+id/new_news_ico"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout2"
            android:layout_below="@+id/new_news_add_ico"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:id="@+id/new_news_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="114dp"
                android:layout_weight="1"
                android:maxLength="40"
                android:ems="10"
                android:hint="Заголовок"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>


        <ImageView
            android:src="@drawable/no_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/new_news_pic"
            android:scaleType="centerCrop"
            android:layout_below="@+id/textInputLayout2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:id="@+id/new_news_add_pic"
            android:text="Добавить баннер"
            android:textColor="#000000"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:layout_below="@+id/new_news_pic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textInputLayout3"
            android:layout_below="@+id/new_news_add_pic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <EditText
                android:id="@+id/new_news_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="114dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Текст новости"
                android:inputType="textMultiLine" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/new_news_add_News"
            android:text="Опубликовать новость"
            android:textColor="#ffffff"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:background="@color/black"
            android:layout_below="@+id/textInputLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>







</ScrollView>
