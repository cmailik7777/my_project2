<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.myauto.designer.sozdat_rab_oper"
    android:padding="4dp"
    android:focusable="false"
    android:focusableInTouchMode="false"
    tools:showIn="@layout/activity_sozdat_rab_oper">


    <RelativeLayout
        android:padding="4dp"
        android:focusable="true" android:focusableInTouchMode="true"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">





        <android.support.design.widget.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignParentEnd="true"
            android:id="@+id/textInputLayout23">

            <EditText
                android:id="@+id/sozdat_rab_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="Поиск"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:text="Конструкционная группа"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView86"
            android:layout_below="@+id/textInputLayout23"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/sozdat_rab_spinnerGroup"
            android:background="@color/gre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView86"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:text="Используемые приемщиком"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView862"
            android:layout_below="@+id/sozdat_rab_spinnerGroup"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/sozdat_rab_spinnerManag"
            android:background="@color/gre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:spinnerMode="dialog"
            android:layout_below="@+id/textView862"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/sozdat_rab_button"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Поиск"
            android:textColor="@color/white"
            android:drawableLeft="@android:drawable/ic_menu_search"
            android:layout_below="@+id/sozdat_rab_spinnerManag"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ListView
            android:id="@+id/sozdat_rab_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/sozdat_rab_button">


        </ListView>




    </RelativeLayout>




</RelativeLayout>
